@model SistemaAdministrativo.Models.VentasViewModel

@{
    ViewBag.Title = "Eliminar Venta";
}

<h2>Eliminar Venta</h2>

<div>

    <dl class="dl-horizontal">

        <dt>
            @Html.DisplayName("Precio Real")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PrecioRealDelProducto)
        </dd>

        <dt>
            @Html.DisplayName("Precio de venta")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PrecioDeVentaDelProducto)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Talle)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Talle)
        </dd>

        <dt>
            @Html.DisplayName("Código de artículo")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CodigoArticulo)
        </dd>

        <dt>
            @Html.DisplayName("Producto vendido")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ProductoVendido)
        </dd>

        <dt>
            @Html.DisplayName("Fecha de venta")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FechaDeVenta)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <a href="@Url.Action("Index")">
                <button type="button" class="btn btn-primary btn-sm">
                    <i class="glyphicon glyphicon-chevron-left"></i>
                </button>
            </a>
            <input type="submit" value="Eliminar venta" class="btn btn-primary" />

        </div>
    }

</div>
