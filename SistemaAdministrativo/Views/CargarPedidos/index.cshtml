@model IEnumerable<SistemaAdministrativo.Models.PedidosViewModel>

@{
    ViewBag.Title = "Buscar Pedido";
}

<@*script src="~/js/buscador.js"></script>*@
<h1>Buscar Pedido</h1>

    <form method="get" action="@Url.Action("index", "CargarPedidos")">
        @Html.TextBox("Fecha","" ,new { @Id = "texto" })
        <script>
  $( function() {
      var fecha = $("#texto").datepicker({
          dateFormat: "dd-mm-yy"
      });
  });
  
      </script>
        <input type="submit" value="Buscar" @*id="botonEnviar"*@ @Url.Action("index", "CargarPedidos") />

</form>

<table class="table table-striped table-hover" id="pedidos-tabla">
    <tr>

        <th>
            @Html.DisplayName("Producto")
        </th>
        <th>
            @Html.DisplayName("Talle")
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Articulo)
        </th>

        <th>
            @Html.DisplayName("Fecha") 
        </th>

        <th>
            @Html.DisplayName("Cliente")
        </th>

        <th></th>
    </tr>

    @if (Model == null)
    {
       

    }
    else {
        foreach (var item in Model)
        {
            <tr>
                <td id="datosNombreProducto">
                    @Html.DisplayFor(modelItem => item.Nombre_De_Producto)
                </td>
                <td id="datosTalleProducto">
                    @Html.DisplayFor(modelItem => item.Talle_Del_Producto)
                </td>
                <td id="datosArticuloProducto">
                    @Html.DisplayFor(modelItem => item.Articulo)
                </td>
                <td id="datosFechaProducto">
                    @Html.DisplayFor(modelItem => item.Fecha_Del_Pedido)
                </td>
                <td id="datosNombreDelCliente">
                    @Html.DisplayFor(modelItem => item.Nombre_Del_Cliente)
                </td>

            </tr>
        }

    }



</table>

<a href="@Url.Action("ExportarAExcel","CargarPedidos")" id="exportar" style="display: none;">Exportar </a>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
